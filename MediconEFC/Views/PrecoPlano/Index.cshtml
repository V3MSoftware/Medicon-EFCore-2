@model IEnumerable<MediconEFC.Models.PrecoPlanoViewModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-primary ">
    <div class="panel-heading panel panel-primary text-center small">
        <h3 class="panel-title">Equipe</h3>
    </div>
    <p class="pCreateNew">
        <a asp-action="Create" class="btn btn-default">Nova equipe</a>
    </p>
    <hr />
    <div class="row-fluid">
        <!-- block -->
        <div class="block">
            <div class="block-content collapse in">
                <div class="span12">
                    <table class="table table-hover table-striped table-bordered" id="tabelaOrdenada">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.FaixaEtaria)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.TipoAcomodacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.AbrangenciaPlano)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.TipoContrato)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.TipoPlano)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.Valor)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.Observacao)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.precoPlano.Ativo)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.FaixaEtaria.Descricao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.TipoAcomodacao.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.AbrangenciaPlano.Nome)
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.TipoContrato.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.TipoPlano.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.Valor)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.Observacao)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.precoPlano.Ativo)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.precoPlano.Id" class="btn btn-primary carregar hidden-print">Alterar</a>
                                    <a asp-action="Details" asp-route-id="@item.precoPlano.Id" class="btn btn-info carregar hidden-print">Histórico</a>
                                    <input type="button" id="btnDelete" value="Delete" asp-route-id="@item.precoPlano.Id" class="btn btn-danger cssDelete" />
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>